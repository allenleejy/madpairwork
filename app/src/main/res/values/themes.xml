
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
    <style name="Base.Theme.CSProject" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CSProject" parent="Base.Theme.CSProject">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Drawer" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="spinBars">true</item>
        <item name="color">@color/darkBlue</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/imageBlue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ItemDetailsActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/imageBlue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.RecyclerViewCardView.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowNoTitle">true</item>
        <item name="spinBars">true</item>
        <item name="color">@color/darkBlue</item>
    </style>

    <style name="Theme.RecyclerViewCardView.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>